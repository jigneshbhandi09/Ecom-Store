datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  category    String
  price       Float
  image       String
  description String?  // nullable

  carts       Cart[]   // back-relation to Cart

  @@map("products")
}

model Cart {
  id        Int     @id @default(autoincrement())
  productId Int
  quantity  Int
  product   Product @relation(fields: [productId], references: [id])

  @@map("cart") // change if your table is named differently
}
